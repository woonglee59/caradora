import random
import numpy as np
import pandas as pd
import tensorflow as tf
import matplotlib.pyplot as plt
import seaborn as sb
from mpl_toolkits.mplot3d import Axes3D
from sklearn.cluster import KMeans



class locate_create:
    high=0.0
    low=0.0
    
    def __init__(self,l,h):
        self.low = l
        self.high = h
    
   
    def chart_v(self):
        df = pd.DataFrame(columns=['x','y',"speed"])
        for i in range(50):
            df.loc[i]=[i,i,random.uniform(0.0,self.high)]
            
        return df


s = locate_create(0,100.0)
df = s.chart_v()
df.head(50)

xData = df.x
yData = df.y
speedData = df.speed

fig = plt.figure()
ax = Axes3D(fig)


points = df.values


kmeans = KMeans(n_clusters=4).fit(points)

kmeans.cluster_centers_
kmeans.labels_
df['cluster'] = kmeans.labels_
ax.scatter(df.x,df.y,df.speed)
plt.show()
